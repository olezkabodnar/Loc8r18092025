extends layout

block content
  //https://getbootstrap.com/docs/3.4/css/#forms code taken from here
  .container
    .row
      .col-md-6.col-md-offset-3
        .card
          .card-header
            h3 Login
          .card-body
            form(method='POST' action='/login')
              .form-group
                label(for='exampleInputEmail1') Email address
                input#exampleInputEmail1.form-control(type='email' name='email' placeholder='Email' required)
              .form-group
                label(for='exampleInputPassword1') Password
                input#exampleInputPassword1.form-control(type='password' name='password' placeholder='Password' required)
              .checkbox
                label
                  input(type='checkbox' name='remember')
                  |  Remember me
              button.btn.btn-primary(type='submit') Login
            .text-center.mt-3
              small Don't have an account? 
                a(href='/register') Register here

