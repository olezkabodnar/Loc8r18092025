extends layout

block content
  //https://getbootstrap.com/docs/3.4/css/#forms code taken from here
  .container
    .row
      .col-md-6.col-md-offset-3
        .card
          .card-header
            h3 Register
          .card-body
            form(method='POST' action='/register')
              .form-group
                label(for='exampleInputName') Name
                input#exampleInputName.form-control(type='text' name='name' placeholder='Name' required)
              .form-group
                label(for='exampleInputEmail1') Email address
                input#exampleInputEmail1.form-control(type='email' name='email' placeholder='Email' required)
              .form-group
                label(for='exampleInputPassword') Password
                input#exampleInputPassword1.form-control(type='password' name='password' placeholder='Password' required)
              .form-group
                label(for='exampleInputPassword') Re-enter Password
                input#exampleInputPassword1.form-control(type='password' name='reenter-password' placeholder='Password' required)
              .checkbox
                label
                  input(type='checkbox' name='remember')
                  |  Remember me
              button.btn.btn-primary(type='submit') Register
            .text-center.mt-3
              small Already have an account? 
                a(href='/login') Login here

